{
  "name": "psychic-enigma",
  "version": "0.0.1-alpha",
  "description": "A matrix bridge assistant for multiple users on a home server",
  "scripts": {
    "typeorm": "typeorm-ts-node-commonjs",
    "migration:generate": "MIGRATE_NAME=$(node -e \"import { generate } from 'random-words'; console.log(generate({exactly: 2, join: '-'}))\") && npm run typeorm migration:generate -- -d shared-ts/database/ormconfig.ts shared-ts/database/migrations/${MIGRATE_NAME}",
    "migration:run": "npm run typeorm migration:run -- -d shared-ts/database/ormconfig.ts",
    "migration:revert": "npm run typeorm migration:revert -- -d shared-ts/database/ormconfig.ts"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/NewteqDeveloper/psychic-enigma.git"
  },
  "keywords": [
    "matrix",
    "mautrix",
    "bridge",
    "communication",
    "e2ee",
    "private",
    "messaging"
  ],
  "author": "newteq",
  "license": "GPL-3.0",
  "bugs": {
    "url": "https://github.com/NewteqDeveloper/psychic-enigma/issues"
  },
  "homepage": "https://github.com/NewteqDeveloper/psychic-enigma#readme",
  "dependencies": {
    "@nestjs/typeorm": "^11.0.0",
    "dotenv": "^16.5.0",
    "pg": "^8.14.1",
    "reflect-metadata": "^0.2.2",
    "typeorm": "^0.3.22"
  },
  "devDependencies": {
    "@tsconfig/node22": "^22.0.1",
    "@types/node": "^22.14.1",
    "prettier": "^3.5.3",
    "random-words": "^2.0.1",
    "ts-node": "^10.9.2",
    "tsconfig-paths": "^4.2.0"
  }
}
